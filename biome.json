{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "error"
      }
    },
    "ignore": ["ui/app/components/ui", "ui/app/hooks/use-toast.ts"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": ["*/.wrangler", "ui/.react-router", "ui/build"]
  }
}
